---
// Components
import Layout from '@/layouts/Layout.astro'
import SubtitleAnimation from '@/components/SubtitleAnimation.tsx'
import Switch from '@/components/ui/Switch.astro'
import Link from '@/components/ui/Link.astro'

// Other
import { name, links } from '@data'
---

<Layout>
  <div class="flex flex-col items-center flex-1 w-full">
    <!-- Profile -->
    <div class="flex flex-col items-center justify-center mt-8">
      <img
        src="/anavende_logo.png"
        alt="avatar"
        class="w-28 h-28 shadow-xl border-4 border-white object-contain bg-[#F9F4F0]"
      />
      <h1 class="mt-2 mb-1 text-3xl font-bold text-[#222] uppercase">{name}</h1>
    </div>
    <div class="w-full max-w-xl">
      <SubtitleAnimation client:load />
    </div>
    <!-- Buttons -->
    <div class="w-full max-w-xl flex flex-col gap-5 mt-8">
      {
        links.map((link) => (
          <Link href={link.url} text={link.text} icon={link.icon} />
        ))
      }
    </div>

    <footer
      class="w-full max-w-xl mx-auto mt-12 flex flex-col items-center gap-3 pb-6"
    >
